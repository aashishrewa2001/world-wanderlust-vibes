<% layout('/layouts/boilerplate') %>

<div class="row mt-3">
    <h2 class="col-4 offset-4">Login Your Account</h2>
    <hr class="col-4 offset-4">
    <div class="col-4 offset-4">
        <form method="post" action="/login" class="needs-validation" novalidate>
            <div class="mb-3">
                <label for="username" class="form-label">Username</label>
                <input type="text"
                name="username" 
                id="username" 
                class="form-control"
                required
                />
            </div>

            <div class="mb-3">
                <label for="password" class="form-label">Password</label>
                <input type="password"
                name="password"
                id="password"
                class="form-control"
                required
                />
            </div>

            <button type="submit" 
                class="btn btn-success mb-3">Login
            </button>

        </form>
    </div>
</div>