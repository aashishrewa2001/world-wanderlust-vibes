<% layout('/layouts/boilerplate') %>

<div class="row mt-3">
    <h2 class="col-4 offset-4">SignUp Account</h2>
    <hr class="col-4 offset-4">
    <div class="col-4 offset-4">
        <form method="post" action="/signup" class="needs-validation" novalidate>
            <div class="mb-3">
                <label for="username" class="form-label">Username</label>
                <input type="text"
                name="username" 
                id="username" 
                class="form-control"
                required
                />
                <div class="valid-feedback">Looks good!</div>
                <div class="invalid-feedback">Username should be valid</div>
            </div>

            <div class="mb-3">
                <label for="email" class="form-label">Email</label>
                <input type="email"
                name="email"
                id="email"
                class="form-control"
                required
                />
                <div class="valid-feedback">right email</div>
                <div class="invalid-feedback">email should be valid</div>
            </div>

            <div class="mb-3">
                <label for="password" class="form-label">Password</label>
                <input type="password"
                name="password"
                id="password"
                class="form-control"
                required
                />
                <div class="valid-feedback">right password</div>
                <div class="invalid-feedback">password should be valid</div>
            </div>

            <button type="submit" 
                class="btn btn-success mb-3">SignUp
            </button>

        </form>
    </div>
</div>